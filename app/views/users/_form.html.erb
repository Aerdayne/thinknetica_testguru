<div class="col-6">
  <%= form_with model: @user, local: true do |form| %>
    <%= render 'shared/errors', resource: @user %>
    <div class='form-group'>
      <%= form.label :email %>
      <%= form.text_field :email, id: :user_email, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.label :username %>
      <%= form.text_field :username, id: :user_username, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: 'form-control' %>
    </div>
    <%= link_to 'Sign in', signin_path, class: 'btn btn-primary' %>
    <%= form.submit 'Sign up', class: 'btn btn-success' %>
  <% end %>
</div>