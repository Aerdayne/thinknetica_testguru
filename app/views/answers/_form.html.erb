<div class="col-6">
  <h2><%= answer_header(@answer) %></h2>
  <%= form_with model: [@question, @answer], local: true do |form| %>
    <%= render 'shared/errors', resource: @answer %>
    <div class='form-group'>
      <%= form.label :content %>
      <%= form.text_area :content, id: :answer_content, rows: 7, cols: 60, class: 'form-control' %>
    </div>
    <div class='form-group row'>
      <%= form.label :correct, class: 'col-2 col-form-label'%>
      <%= form.check_box :correct, id: :answer_correct, class: 'form-control col-1' %>
    </div>
    <%= form.submit class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'View question', @answer.question, class: 'btn btn-primary' %>
</div>