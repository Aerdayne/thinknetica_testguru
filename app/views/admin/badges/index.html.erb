<div>
  <%= render 'shared/errors', resource: @badge %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Badge</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Image path</th>
        <th scope="col">Criterion</th>
        <th scope="col">Value</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @badges.each_with_index do |badge, index| %>
        <%= render partial: badge, locals: { given_badge: badge, counter: index + 1 } %>
      <% end %>
    </tbody>
  </table>
  <div class="btn-group" role="group" aria-label="Basic example">
    <%= link_to 'Add a badge', new_admin_badge_path(@badge), class: 'btn btn-primary'   %>
  </div>
</div>