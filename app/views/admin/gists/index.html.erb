<div class="col-8">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Gist #</th>
        <th scope="col">Question</th>
        <th scope="col">URL</th>
        <th scope="col">User</th>
      </tr>
    </thead>
    <tbody>
      <% @gists.each_with_index do |gist, index| %>
        <%= render partial: gist, locals: { gist: gist, counter: index + 1 } %>
      <% end %>
    </tbody>
  </table>
</div>