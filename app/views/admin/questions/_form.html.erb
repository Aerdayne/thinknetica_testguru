<div class="col-8">
  <h2><%= question_header(@question) %></h2>
  <%= form_with model: [:admin, @test, @question], local: true do |form| %>
    <%= render 'shared/errors', resource: @question %>
    <div class='form-group'>
      <%= form.label :content %>
      <%= form.text_field :content, id: :question_content, class: 'form-control' %>
    </div>
    <div class='btn-group'>
      <%= link_to 'View test', admin_test_path(@question.test), class: 'btn btn-primary' %>
      <%= form.submit class: 'btn btn-success' %>
    </div>
  <% end %>
</div>