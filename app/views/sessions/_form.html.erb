<div class="col-8">
  <%= form_with url: sessions_path, local: true do |form| %>
    <%= flash_message(:alert) %>
    <div class='form-group'>
      <%= form.label :email %>
      <%= form.text_field :email, id: :email, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.label :password %>
      <%= form.password_field :password, id: :password, class: 'form-control' %>
    </div>
    <%= link_to 'Sign up', signup_path, class: 'btn btn-primary' %>
    <%= form.submit 'Enter', class: 'btn btn-success' %>
  <% end %>
</div>